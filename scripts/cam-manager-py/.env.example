# Falcon-Eye Camera Manager Configuration
# Copy this to .env and fill in your values

# ===================
# Server Configuration
# ===================
PORT=3000
NODE_ENV=production

# ===================
# Database (PostgreSQL)
# ===================
DB_HOST=postgres.ace-db.svc.cluster.local
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=amazingct
DB_NAME=homedb

# ===================
# Kubernetes Cluster
# ===================
# For in-cluster deployment, leave these empty (uses serviceAccount)
# For external deployment, provide kubeconfig path or API details
KUBECONFIG_PATH=
K8S_API_SERVER=
K8S_TOKEN=
K8S_CA_CERT=

# Namespace for camera deployments
K8S_NAMESPACE=falcon-eye

# ===================
# Network Configuration
# ===================
# Node IPs for stream URL generation
NODE_IP_ACE=192.168.1.142
NODE_IP_FALCON=192.168.1.176
NODE_IP_K3S1=192.168.1.207
NODE_IP_K3S2=192.168.1.138

# NodePort range for camera streams (default: 30900-30999)
STREAM_PORT_START=30900
STREAM_PORT_END=30999

# ===================
# Camera Defaults
# ===================
DEFAULT_RESOLUTION=640x480
DEFAULT_FRAMERATE=15
DEFAULT_STREAM_QUALITY=70
